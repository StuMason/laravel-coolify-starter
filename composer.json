{
    "name": "stumason/laravel-coolify-starter",
    "description": "Transform a fresh Laravel app into a production-ready Coolify deployment with Horizon, Reverb, Telescope, and health checks.",
    "keywords": ["laravel", "coolify", "deployment", "horizon", "reverb", "telescope", "nixpacks"],
    "license": "MIT",
    "authors": [
        {
            "name": "Stu Mason",
            "email": "stu@stuartmason.co.uk"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Stumason\\CoolifyStarter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stumason\\CoolifyStarter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "lint": "pint",
        "analyse": "phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Stumason\\CoolifyStarter\\CoolifyStarterServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
